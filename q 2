// Refa ̧ca o programa da Quest ̃ao 1, utilizando a estrutura de repeti ̧c ̃ao com teste no final.

#include <stdio.h>

int main(){
    int num;

    do{
    printf("Digite um número de 1 a 7 para iniciar o programa, ou 0 para encerrar:");
    scanf("%d", &num);
    if(num==0){
        break;
    }
    switch(num){
        case 1:
            printf("Domingo\n");
            break;
        case 2:
            printf("Segunda\n");
            break;
        case 3:
            printf("Terça\n");
            break;
        case 4:
            printf("Quarta\n");
            break;
        case 5:
            printf("Quinta\n");
            break;
        case 6:
            printf("Sexta\n");
            break;
        case 7:
            printf("Sábado\n");
            break;
        default:
            printf("Número de dia não válido\n");
            break;
    }
    }while (num != 0);
    return 0;    
    }
