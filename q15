#include <stdio.h>
#include <math.h>

int main() {
    int base = 3, expoente;

    printf("Potências de 3, de 3^0 a 3^7:\n");

    // Laço para calcular as potências de 3^0 a 3^7
    for (expoente = 0; expoente <= 7; expoente++) {
        // Calcula a potência de 3 elevado ao expoente
        int resultado = pow(base, expoente);
        // Exibe o resultado
        printf("3^%d = %d\n", expoente, resultado);
    }

    return 0;
}
